
@{
    ViewData["Title"] = "Applications";
}
<div ng-controller="SFAppDRToolController" ng-init= "refresh()">
    <div class="container" style="margin-top: 20px;">

        <h1 class="text-center">SF App Disaster Recovery Tool</h1>

        <form>
            <div style="margin-top: 15px;">
                <div style="width: 45%; float: left; margin-right: 30px;">
                    <h2>Primary Cluster</h2>
                    <div class="form-group">
                        <label>Primary Cluster endpoint</label>
                        <input type="text" placeholder="localhost" ng-model="primaryClusterEndpoint" />
                        <small class="text-muted">To connect to the primary cluster</small>
                    </div>
                    <div class="form-group">
                        <label>Secure Thumbprint</label>
                        <input type="text" placeholder="012345678901234567890123456789" ng-model="primSecureThumbp" />
                    </div>
                    <div class="form-group">
                        <label>Common Name</label>
                        <input type="text" placeholder="westus.cloudapp.azure.com" ng-model="primaryCommonName" />
                    </div>
                </div>
                <div style="width: 45%; float: left;">
                    <h2>Secondary Cluster</h2>
                    <div class="form-group">
                        <label>Secondary Cluster endpoint</label>
                        <input type="text" placeholder="localhost" ng-model="secondaryClusterEndpoint" />
                        <small class="text-muted">To connect to the secondary cluster</small>
                    </div>
                    <div class="form-group">
                        <label>Secure Thumbprint</label>
                        <input type="text" placeholder="012345678901234567890123456789" ng-model="secSecureThumbp" />
                    </div>
                    <div class="form-group">
                        <label>Common Name</label>
                        <input type="text" placeholder="westus.cloudapp.azure.com" ng-model="primaryCommonName" />
                    </div>
                </div>
            </div>
            <div style="clear: both; display: block"></div>
            <div class="form-group">
                <button ng-click="getAppsOnPrimaryCluster()" class="button success">Next</button>
            </div>
            <!-- <button ng-click="getAppsOnPrimaryCluster()" class="button success">Get Apps</button> -->
        </form>

    </div>
</div>

